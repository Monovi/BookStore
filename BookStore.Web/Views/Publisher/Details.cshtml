@model BookStore.Web.Models.Publishers.PublisherModel

@{
    ViewData["Title"] = $"Publisher Details: {Model.PublisherName}";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublisherName)
        </dt>
        <dd class="col-sm-10">
            @Model.PublisherName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublisherAddress)
        </dt>
        <dd class="col-sm-10">
            @Model.PublisherAddress
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
